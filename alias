alias gfh="git log --oneline -n 10 --topo-order --graph --color \
  --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' \
  | prettier | trim-to-terminal-width"
alias gfd="git log --oneline  --topo-order --graph --color \
  --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' origin/master.. \
  | prettier | trim-to-terminal-width"
